---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SanityContent from '../components/SanityContent.astro';
import { getPageBySlug } from '../lib/sanity';

// Fetch page content from Sanity CMS
const servicesPage = await getPageBySlug('services');
---

<Layout 
  title="Our Services - Web Design, Graphic Design, SEO & PPC | Outrun Studio"
  description="Comprehensive digital marketing services including web design, graphic design, SEO, and PPC advertising. Let us help your business outrun the competition."
>
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-blue-600 to-blue-800 text-white py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-5xl font-bold mb-6">Our Services</h1>
          <p class="text-xl text-blue-100 max-w-3xl mx-auto">
            Comprehensive digital marketing solutions designed to help your business 
            stand out and achieve remarkable results.
          </p>
        </div>
      </div>
    </section>

    <!-- Services Content -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        {servicesPage && servicesPage.content ? (
          <div class="text-center mb-16">
            <SanityContent content={servicesPage.content} className="text-xl text-gray-600 max-w-4xl mx-auto" />
          </div>
        ) : null}
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
          <!-- Web Design -->
          <div class="bg-gray-50 p-8 rounded-lg">
            <div class="w-16 h-16 bg-blue-100 rounded-lg flex items-center justify-center mb-6">
              <img src="/images/Web-design-Icon.png" alt="Web Design" class="w-8 h-8" />
            </div>
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Web Design</h2>
            <p class="text-gray-600 mb-6">
              Modern, responsive websites that convert visitors into customers with 
              lightning-fast load times and beautiful design.
            </p>
            <ul class="space-y-2 text-gray-600">
              <li>• Responsive design for all devices</li>
              <li>• Lightning-fast load times</li>
              <li>• SEO-optimized structure</li>
              <li>• Custom functionality</li>
            </ul>
          </div>

          <!-- Graphic Design -->
          <div class="bg-gray-50 p-8 rounded-lg">
            <div class="w-16 h-16 bg-blue-100 rounded-lg flex items-center justify-center mb-6">
              <img src="/images/Graphic-Design-Icon-logo.png" alt="Graphic Design" class="w-8 h-8" />
            </div>
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Graphic Design</h2>
            <p class="text-gray-600 mb-6">
              Professional branding, logos, and visual assets that make your business 
              memorable and stand out from the competition.
            </p>
            <ul class="space-y-2 text-gray-600">
              <li>• Logo design and branding</li>
              <li>• Marketing materials</li>
              <li>• Social media graphics</li>
              <li>• Print and digital assets</li>
            </ul>
          </div>

          <!-- SEO -->
          <div class="bg-gray-50 p-8 rounded-lg">
            <div class="w-16 h-16 bg-blue-100 rounded-lg flex items-center justify-center mb-6">
              <img src="/images/SEO-icon.png" alt="SEO" class="w-8 h-8" />
            </div>
            <h2 class="text-2xl font-bold text-gray-900 mb-4">SEO</h2>
            <p class="text-gray-600 mb-6">
              Search engine optimization that gets your business found by customers 
              actively searching for your products or services.
            </p>
            <ul class="space-y-2 text-gray-600">
              <li>• Local SEO optimization</li>
              <li>• Technical SEO audits</li>
              <li>• Content optimization</li>
              <li>• Performance monitoring</li>
            </ul>
          </div>

          <!-- PPC Advertising -->
          <div class="bg-gray-50 p-8 rounded-lg">
            <div class="w-16 h-16 bg-blue-100 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-gray-900 mb-4">PPC Advertising</h2>
            <p class="text-gray-600 mb-6">
              Targeted pay-per-click campaigns that drive qualified traffic and 
              maximize your return on advertising investment.
            </p>
            <ul class="space-y-2 text-gray-600">
              <li>• Google Ads management</li>
              <li>• Facebook & Instagram ads</li>
              <li>• Campaign optimization</li>
              <li>• ROI tracking & reporting</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-blue-600 text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Get Started?</h2>
        <p class="text-xl text-blue-100 mb-8 max-w-3xl mx-auto">
          Let's discuss your project goals and how we can help your business 
          achieve digital marketing success.
        </p>
        <a 
          href="/contact" 
          class="bg-yellow-400 text-blue-900 px-8 py-4 rounded-lg text-lg font-semibold hover:bg-yellow-300 transition-colors"
        >
          Get Free Consultation
        </a>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
