---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import HeroFutureswap from '../components/HeroFutureswap.astro';
import AboutSection from '../components/AboutSection.astro';
import ServicesSection from '../components/ServicesSection.astro';
import DecentralizedSection from '../components/DecentralizedSection.astro';
import ProcessSection from '../components/ProcessSection.astro';
import WhySection from '../components/WhySection.astro';
import ResultsSection from '../components/ResultsSection.astro';
import CTASection from '../components/CTASection.astro';
