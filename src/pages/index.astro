<Layout 
  title="Outrun Studio - Websites, SEO & Design That Gets Results"
  description="Small creative team working between Idaho Falls, Paris, and Switzerland. We build fast, search-ready websites and brands that help local businesses get found online."
>
  <Header />
  <main>
    <!-- Hero Section -->
    <HeroFutureswap />
    
    <!-- About / Story -->
    <AboutSection />
    
    <!-- What We Do -->
    <ServicesSection />
    
    <!-- Graphic Design Section -->
    <DecentralizedSection />
    
    <!-- Process -->
    <ProcessSection />
    
    <!-- Why We Do It & Where We Work -->
    <WhySection />
    
    <!-- Results -->
    <ResultsSection />
    
    <!-- Final CTA -->
    <CTASection />
  </main>
  <Footer />
</Layout>
