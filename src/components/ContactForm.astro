---
// Premium Contact form overlay component for Outrun Studio
---

<div class="fixed top-1/2 right-8 transform -translate-y-1/2 z-50 group">
  <div class="glass-morphism rounded-2xl p-8 w-96 neon-glow-subtle group-hover:neon-glow transition-all duration-500 hover-lift">
    <!-- Header -->
    <div class="text-center mb-8">
      <h3 class="text-outrun-neon-bright text-3xl font-bold mb-2 font-orbitron text-neon-glow-bright">
        Get Your Website
      </h3>
      <p class="text-outrun-light-gray text-lg font-inter">
        Start your project today
      </p>
    </div>
    
    <!-- Premium Form -->
    <form class="space-y-6">
      <!-- Name Field -->
      <div class="group">
        <label class="block text-outrun-light text-lg font-semibold mb-3 font-inter">Name</label>
        <input 
          type="text" 
          class="w-full px-4 py-4 bg-outrun-darker border-2 border-outrun-neon border-opacity-30 rounded-xl text-outrun-light focus:outline-none focus:ring-2 focus:ring-outrun-neon focus:border-outrun-neon transition-all duration-300 font-inter text-lg group-hover:border-opacity-60"
          placeholder="Your name"
        />
      </div>
      
      <!-- Email Field -->
      <div class="group">
        <label class="block text-outrun-light text-lg font-semibold mb-3 font-inter">Email</label>
        <input 
          type="email" 
          class="w-full px-4 py-4 bg-outrun-darker border-2 border-outrun-neon border-opacity-30 rounded-xl text-outrun-light focus:outline-none focus:ring-2 focus:ring-outrun-neon focus:border-outrun-neon transition-all duration-300 font-inter text-lg group-hover:border-opacity-60"
          placeholder="your@email.com"
        />
      </div>
      
      <!-- Phone and Budget Row -->
      <div class="grid grid-cols-2 gap-4">
        <div class="group">
          <label class="block text-outrun-light text-lg font-semibold mb-3 font-inter">Phone</label>
          <input 
            type="tel" 
            class="w-full px-4 py-4 bg-outrun-darker border-2 border-outrun-neon border-opacity-30 rounded-xl text-outrun-light focus:outline-none focus:ring-2 focus:ring-outrun-neon focus:border-outrun-neon transition-all duration-300 font-inter text-lg group-hover:border-opacity-60"
            placeholder="(208) 555-0123"
          />
        </div>
        
        <div class="group">
          <label class="block text-outrun-light text-lg font-semibold mb-3 font-inter">Budget</label>
          <select class="w-full px-4 py-4 bg-outrun-darker border-2 border-outrun-neon border-opacity-30 rounded-xl text-outrun-light focus:outline-none focus:ring-2 focus:ring-outrun-neon focus:border-outrun-neon transition-all duration-300 font-inter text-lg group-hover:border-opacity-60">
            <option value="">Select range</option>
            <option value="under-5k">Under $5,000</option>
            <option value="5k-10k">$5,000 - $10,000</option>
            <option value="10k-20k">$10,000 - $20,000</option>
            <option value="20k-plus">$20,000+</option>
          </select>
        </div>
      </div>
      
      <!-- Project Details -->
      <div class="group">
        <label class="block text-outrun-light text-lg font-semibold mb-3 font-inter">Project Details</label>
        <textarea 
          rows="4"
          class="w-full px-4 py-4 bg-outrun-darker border-2 border-outrun-neon border-opacity-30 rounded-xl text-outrun-light focus:outline-none focus:ring-2 focus:ring-outrun-neon focus:border-outrun-neon transition-all duration-300 font-inter text-lg group-hover:border-opacity-60 resize-none"
          placeholder="Tell us about your project..."
        ></textarea>
      </div>
      
      <!-- Premium Submit Button -->
      <button 
        type="submit"
        class="w-full bg-gradient-neon text-outrun-darker py-5 px-8 rounded-xl text-xl font-bold hover:scale-105 transition-all duration-500 neon-glow hover-lift font-inter"
      >
        <span class="flex items-center justify-center">
          <span class="mr-3">Your Website</span>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </span>
      </button>
    </form>
    
    <!-- Trust indicators -->
    <div class="mt-8 pt-6 border-t border-outrun-neon border-opacity-20">
      <div class="flex items-center justify-center space-x-6 text-outrun-light-gray text-sm font-inter">
        <div class="flex items-center">
          <div class="w-2 h-2 bg-outrun-neon rounded-full mr-2"></div>
          <span>Secure</span>
        </div>
        <div class="flex items-center">
          <div class="w-2 h-2 bg-outrun-neon rounded-full mr-2"></div>
          <span>Fast Response</span>
        </div>
        <div class="flex items-center">
          <div class="w-2 h-2 bg-outrun-neon rounded-full mr-2"></div>
          <span>No Spam</span>
        </div>
      </div>
    </div>
  </div>
</div>
