---
// Component to render Sanity CMS content
export interface Props {
  content: any[];
  className?: string;
}

const { content, className = "" } = Astro.props;
---

{content && content.length > 0 && (
  <div class={className}>
    {content.map((block, index) => {
      if (block._type === 'block' && block.children) {
        return (
          <div class="mb-6 p-6 bg-outrun-darker/30 backdrop-blur-sm border border-outrun-neon/20 rounded-xl hover:border-outrun-neon/30 transition-all duration-300 hover:bg-outrun-darker/40">
            <p class="text-gray-300 leading-relaxed text-center">
              {block.children.map((child: any) => {
                if (child._type === 'span') {
                  return child.text;
                }
                return '';
              })}
            </p>
          </div>
        );
      }
      return null;
    })}
  </div>
)}
