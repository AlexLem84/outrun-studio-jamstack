---
// Header component for Outrun Studio - Dark Theme
import { getMediaByType, urlFor } from '../lib/sanity';

// Fetch logo from Sanity Media Library
const logo = await getMediaByType('logo');

// Logo is fetched successfully
---

<header class="bg-outrun-darker/80 backdrop-blur-sm border-b border-outrun-neon/50 sticky top-0 left-0 right-0 z-50 header-glow">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-28 py-4">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center">
          {logo && logo.image ? (
            <img 
              src={urlFor(logo.image).url()} 
              alt={logo.image.alt || logo.title || 'Outrun Studio Logo'}
              class="h-14 w-auto my-4"
            />
          ) : (
            <div class="text-2xl font-orbitron font-bold py-4">
              <span class="text-outrun-neon text-neon-glow">OUTRUN</span>
              <span class="text-outrun-light ml-2">Studio</span>
            </div>
          )}
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          <a href="/" class="text-outrun-neon bg-outrun-neon bg-opacity-20 px-3 py-2 text-sm font-medium transition-colors rounded">
            HOME
          </a>
          <a href="/about" class="text-outrun-light hover:text-outrun-neon px-3 py-2 text-sm font-medium transition-colors">
            ABOUT
          </a>
          <a href="/services" class="text-outrun-light hover:text-outrun-neon px-3 py-2 text-sm font-medium transition-colors">
            SERVICES
          </a>
          <a href="/contact" class="text-outrun-light hover:text-outrun-neon px-3 py-2 text-sm font-medium transition-colors">
            INFO & CONTACT
          </a>
          <a href="/blog" class="text-outrun-light hover:text-outrun-neon px-3 py-2 text-sm font-medium transition-colors">
            BLOG
          </a>
        </div>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button type="button" class="mobile-menu-button bg-outrun-darker inline-flex items-center justify-center p-2 rounded-md text-outrun-light hover:text-outrun-neon hover:bg-outrun-gray focus:outline-none focus:ring-2 focus:ring-inset focus:ring-outrun-neon">
          <span class="sr-only">Open main menu</span>
          <!-- Hamburger icon -->
          <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div class="mobile-menu hidden md:hidden">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-outrun-darker border-t border-outrun-neon">
        <a href="/" class="text-outrun-neon bg-outrun-neon bg-opacity-20 block px-3 py-2 text-base font-medium rounded">
          HOME
        </a>
        <a href="/about" class="text-outrun-light hover:text-outrun-neon block px-3 py-2 text-base font-medium">
          ABOUT
        </a>
        <a href="/services" class="text-outrun-light hover:text-outrun-neon block px-3 py-2 text-base font-medium">
          SERVICES
        </a>
        <a href="/contact" class="text-outrun-light hover:text-outrun-neon block px-3 py-2 text-base font-medium">
          INFO & CONTACT
        </a>
        <a href="/blog" class="text-outrun-light hover:text-outrun-neon block px-3 py-2 text-base font-medium">
          BLOG
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.querySelector('.mobile-menu-button');
    const mobileMenu = document.querySelector('.mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>
