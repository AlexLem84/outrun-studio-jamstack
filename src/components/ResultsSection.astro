<section class="relative w-full py-24" style="z-index: 1;">
  <div class="relative max-w-6xl mx-auto px-6 sm:px-8 lg:px-10">
    <div class="absolute inset-0 aurora-gradient pointer-events-none opacity-50"></div>
    
    <div class="relative">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <span class="text-sm uppercase tracking-[0.45em] text-outrun-neon/70">Real Results</span>
        <h2 class="font-biennale text-white mt-4" style="font-size: 48px; line-height: 1.1; font-weight: 500; letter-spacing: -0.02em;">
          Proof that it works
        </h2>
      </div>

      <!-- Results Grid -->
      <div class="grid md:grid-cols-3 gap-8">
        
        <!-- Roof Rescue -->
        <div class="glass-morphism rounded-2xl p-8 border border-outrun-neon/10 hover:border-outrun-neon/30 transition-all duration-300">
          <h3 class="text-2xl font-bold text-white mb-2">Roof Rescue</h3>
          <p class="text-sm text-outrun-neon mb-6">Idaho Falls</p>
          <div class="space-y-4">
            <div>
              <div class="text-4xl font-bold text-outrun-neon mb-1">+168%</div>
              <p class="text-outrun-light-gray">organic traffic in 4 months</p>
            </div>
            <div>
              <div class="text-4xl font-bold text-outrun-neon mb-1">3Ã—</div>
              <p class="text-outrun-light-gray">more calls from Google Maps</p>
            </div>
          </div>
        </div>

        <!-- Mentor Motors -->
        <div class="glass-morphism rounded-2xl p-8 border border-outrun-neon/10 hover:border-outrun-neon/30 transition-all duration-300">
          <h3 class="text-2xl font-bold text-white mb-2">Mentor Motors</h3>
          <p class="text-sm text-outrun-neon mb-6">East Idaho</p>
          <div class="space-y-4">
            <div>
              <div class="text-4xl font-bold text-outrun-neon mb-1">14</div>
              <p class="text-outrun-light-gray">top 3 keyword rankings</p>
            </div>
            <div>
              <p class="text-outrun-light-gray">Steady increase in leads month over month</p>
            </div>
          </div>
        </div>

        <!-- Browne & Co -->
        <div class="glass-morphism rounded-2xl p-8 border border-outrun-neon/10 hover:border-outrun-neon/30 transition-all duration-300">
          <h3 class="text-2xl font-bold text-white mb-2">Browne & Co.</h3>
          <p class="text-sm text-outrun-neon mb-6">Switzerland</p>
          <div class="space-y-4">
            <div>
              <p class="text-outrun-light-gray mb-3">New multilingual site</p>
              <div class="text-3xl font-bold text-outrun-neon mb-1">Booked out</div>
              <p class="text-outrun-light-gray">calendar within 6 weeks</p>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>

