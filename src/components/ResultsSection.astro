---
// Results Section
---

<section class="results-section relative w-full py-24 overflow-hidden" style="z-index: 1;">
  <!-- Dot Pattern Background -->
  <div class="dot-pattern"></div>
  
  <div class="relative max-w-6xl mx-auto px-6 sm:px-8 lg:px-10">
    <div class="relative">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <span class="text-sm uppercase tracking-[0.45em] text-outrun-neon/70">Real Results</span>
        <h2 class="font-biennale text-white mt-4" style="font-size: 48px; line-height: 1.1; font-weight: 500; letter-spacing: -0.02em;">
          Proof that it <span class="gradient-text-glow">works</span>
        </h2>
      </div>

      <!-- Results Grid -->
      <div class="grid md:grid-cols-3 gap-8">
        
        <!-- Roof Rescue -->
        <div class="results-card">
          <div class="gradient-line"></div>
          <div class="card-content">
            <h3 class="text-2xl font-bold text-white mb-2">Roof Rescue</h3>
            <p class="text-sm text-gray-400 mb-8">Idaho Falls</p>
            <div class="space-y-6">
              <div>
                <div class="text-5xl font-bold gradient-text mb-2">+168%</div>
                <p class="text-gray-300 text-sm">organic traffic in 4 months</p>
              </div>
              <div>
                <div class="text-5xl font-bold gradient-text mb-2">3Ã—</div>
                <p class="text-gray-300 text-sm">more calls from Google Maps</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Mentor Motors -->
        <div class="results-card">
          <div class="gradient-line"></div>
          <div class="card-content">
            <h3 class="text-2xl font-bold text-white mb-2">Mentor Motors</h3>
            <p class="text-sm text-gray-400 mb-8">East Idaho</p>
            <div class="space-y-6">
              <div>
                <div class="text-5xl font-bold gradient-text mb-2">14</div>
                <p class="text-gray-300 text-sm">top 3 keyword rankings</p>
              </div>
              <div>
                <div class="text-3xl font-bold gradient-text mb-2">Steady increase</div>
                <p class="text-gray-300 text-sm">in leads month over month</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Browne & Co -->
        <div class="results-card">
          <div class="gradient-line"></div>
          <div class="card-content">
            <h3 class="text-2xl font-bold text-white mb-2">Browne & Co.</h3>
            <p class="text-sm text-gray-400 mb-8">Switzerland</p>
            <div class="space-y-6">
              <div>
                <div class="text-3xl font-bold gradient-text mb-2">New multilingual site</div>
                <p class="text-gray-300 text-sm mb-6">Built for international reach</p>
              </div>
              <div>
                <div class="text-4xl font-bold gradient-text mb-2">Booked out</div>
                <p class="text-gray-300 text-sm">calendar within 6 weeks</p>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>

<style>
  /* Dot Pattern Background */
  .dot-pattern {
    position: absolute;
    inset: 0;
    background-image: radial-gradient(circle, rgba(0, 217, 255, 0.15) 1px, transparent 1px);
    background-size: 30px 30px;
    pointer-events: none;
    opacity: 0.4;
  }

  /* Results Card with Gradient Top Border */
  .results-card {
    position: relative;
    background: rgba(10, 10, 15, 0.85);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
    backdrop-filter: blur(12px);
  }

  .results-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
  }

  /* Gradient Top Line */
  .gradient-line {
    height: 3px;
    background: linear-gradient(90deg, #b24bf3 0%, #8b5cf6 25%, #06b6d4 75%, #00d9ff 100%);
    box-shadow: 0 0 20px rgba(178, 75, 243, 0.5);
  }

  .card-content {
    padding: 2rem;
  }

  /* Gradient Text for Numbers */
  .gradient-text {
    background: linear-gradient(135deg, #b24bf3 0%, #8b5cf6 25%, #06b6d4 75%, #00d9ff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    display: inline-block;
  }

  /* Gradient Text with Glow for "works" */
  .gradient-text-glow {
    background: linear-gradient(135deg, #b24bf3 0%, #8b5cf6 25%, #06b6d4 75%, #00d9ff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    display: inline-block;
    filter: drop-shadow(0 0 20px rgba(178, 75, 243, 0.6)) drop-shadow(0 0 40px rgba(0, 217, 255, 0.4));
    text-shadow: 0 0 30px rgba(178, 75, 243, 0.5);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .gradient-text {
      font-size: 2.5rem;
    }
  }
</style>

