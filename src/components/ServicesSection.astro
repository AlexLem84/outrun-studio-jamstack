---
// Services Section Component
const services = [
  {
    title: 'Web Design',
    description: 'Custom-built websites that turn visitors into calls and bookings.',
    buttonText: 'Learn More',
    buttonLink: '/web-design'
  },
  {
    title: 'SEO',
    description: 'Local and regional strategies that help your business show up where it matters.',
    buttonText: 'Learn More',
    buttonLink: '/seo'
  },
  {
    title: 'Graphic Design',
    description: 'Branding and print design that tie your online and offline presence together.',
    buttonText: 'Learn More',
    buttonLink: '/graphic-design'
  }
];
---
<section class="services-section purple-blue-gradient relative overflow-hidden w-full py-24" style="isolation: isolate; z-index: 80;">
  <div class="max-w-6xl mx-auto px-6 sm:px-8 lg:px-10 relative z-20" style="isolation: isolate;">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <span class="text-sm uppercase tracking-[0.45em] text-outrun-neon/70">What We Do</span>
      <h2 class="font-biennale text-white mt-4" style="font-size: 48px; line-height: 1.1; font-weight: 500; letter-spacing: -0.02em;">
        Web Design. SEO. <span class="gradient-text">Graphic Design.</span>
      </h2>
      <p class="text-xl text-gray-300 mt-6 max-w-3xl mx-auto">
        We focus on clarity, speed, and measurable growth — not hype.<br />
        Everything we build is clean, functional, and tuned for search performance.
      </p>
    </div>
    
    <!-- Services Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services && services.length > 0 ? (
        services.map((service) => (
          <div class="service-card-new group">
            <!-- Gradient Top Line -->
            <div class="gradient-line-services"></div>
            
            <div class="card-content-services">
              <!-- Service Title -->
              <h3 class="text-2xl font-bold text-white text-center mb-4 transition-all duration-300 group-hover:scale-105">
                {service.title}
              </h3>
              
              <!-- Service Description -->
              <p class="text-gray-300 text-base leading-relaxed text-center mb-8">
                {service.description}
              </p>
              
              <!-- Service Button -->
              <div class="text-center">
                <a href={service.buttonLink} class="service-cta-new inline-flex items-center justify-center gap-2 px-6 py-3 text-sm font-semibold transition-all duration-300">
                  {service.buttonText}
                  <span class="arrow-icon">→</span>
                </a>
              </div>
            </div>
          </div>
        ))
      ) : (
        <!-- Fallback content if no services -->
        <div class="col-span-full text-center">
          <p class="text-gray-300 text-lg">No services available. Please add services in Sanity CMS.</p>
        </div>
      )}
    </div>
  </div>

</section>

<style>
  /* New Service Card with Gradient Top */
  .service-card-new {
    position: relative;
    background: rgba(10, 10, 15, 0.85);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
    backdrop-filter: blur(12px);
    animation: slideInUp 0.6s ease-out forwards;
    opacity: 0;
    transform: translateY(30px);
  }

  .service-card-new:hover {
    transform: translateY(-6px);
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
  }

  /* Gradient Top Line */
  .gradient-line-services {
    height: 3px;
    background: linear-gradient(90deg, #b24bf3 0%, #8b5cf6 25%, #06b6d4 75%, #00d9ff 100%);
    box-shadow: 0 0 20px rgba(178, 75, 243, 0.5);
  }

  .card-content-services {
    padding: 2.5rem 2rem;
  }

  /* Service CTA Button with Gradient */
  .service-cta-new {
    color: #00d9ff;
    border: 1px solid rgba(0, 217, 255, 0.3);
    border-radius: 9999px;
    background: rgba(0, 217, 255, 0.05);
    transition: all 0.3s ease;
  }

  .service-cta-new:hover {
    background: linear-gradient(135deg, rgba(178, 75, 243, 0.15), rgba(0, 217, 255, 0.15));
    border-color: rgba(0, 217, 255, 0.6);
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(0, 217, 255, 0.2);
  }

  .service-cta-new .arrow-icon {
    display: inline-block;
    transition: transform 0.3s ease;
  }

  .service-cta-new:hover .arrow-icon {
    transform: translateX(4px);
  }

  /* Staggered Animation on Load */
  .service-card-new:nth-child(1) { animation-delay: 0.1s; }
  .service-card-new:nth-child(2) { animation-delay: 0.2s; }
  .service-card-new:nth-child(3) { animation-delay: 0.3s; }
  .service-card-new:nth-child(4) { animation-delay: 0.4s; }
  
  @keyframes slideInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
</style>
