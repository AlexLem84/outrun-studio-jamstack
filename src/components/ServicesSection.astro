---
// Services Section Component - Glass-like cards with glow effects
import { getServices } from '../lib/sanity';
import ServiceIcons from './ServiceIcons.astro';

// Fetch services from Sanity CMS
const services = await getServices();
---

<section class="relative w-full py-24 services-gradient">
  <div class="max-w-7xl mx-auto px-6 relative z-10" style="isolation: isolate;">
    <!-- Section Title -->
    <h2 class="text-4xl md:text-5xl font-bold text-center mb-16 font-sans leading-tight tracking-tight" style="color: #f7f9fb; font-kerning: normal; letter-spacing: 0.035em; text-shadow: 0 8px 32px rgba(7, 219, 180, 0.16);">
      OUR MARKETING SERVICES AT A GLANCE
    </h2>
    
    <!-- Services Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {services && services.length > 0 ? (
        services.map((service: any, index: number) => (
          <div class="service-card group relative overflow-hidden rounded-2xl p-8">
            <div class="service-card__aura" aria-hidden="true"></div>
            <!-- Service Title -->
            <h3 class="service-title text-xl font-semibold text-center mb-6 font-sans tracking-wide transition-all duration-500 group-hover:translate-y-[-8px]">
              {service.title}
            </h3>
            
            <!-- Service Description -->
            <p class="service-description text-gray-300 text-sm leading-relaxed font-sans text-center mb-8 transition-all duration-500 group-hover:translate-y-[-4px] group-hover:text-white">
              {service.description}
            </p>
            
            <!-- Service Button -->
            <div class="service-button text-center transition-all duration-500 group-hover:translate-y-[-4px]">
              <a href={service.buttonLink} class="service-cta inline-flex items-center justify-center px-6 py-3 text-sm font-semibold transition-all duration-300">
                {service.buttonText}
              </a>
            </div>
          </div>
        ))
      ) : (
        <!-- Fallback content if no services -->
        <div class="col-span-full text-center">
          <p class="text-gray-300 text-lg">No services available. Please add services in Sanity CMS.</p>
        </div>
      )}
    </div>
  </div>
</section>

<style>
  .services-gradient {
    position: relative;
    overflow: hidden;
    background:
      radial-gradient(120% 120% at 85% 0%, rgba(21, 65, 138, 0.35) 0%, rgba(2, 9, 24, 0) 60%),
      radial-gradient(110% 110% at 10% 92%, rgba(5, 84, 96, 0.28) 0%, rgba(2, 12, 20, 0.02) 45%, rgba(0, 0, 0, 0) 78%),
      linear-gradient(180deg, #05050b 0%, #020205 100%);
  }

  .services-gradient::after {
    content: "";
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 400 400' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.42' numOctaves='1' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    background-size: 200px 200px;
    mix-blend-mode: soft-light;
    opacity: 0.14;
    pointer-events: none;
  }

  
  .service-card {
    background: linear-gradient(160deg, rgba(9, 13, 24, 0.92) 0%, rgba(6, 9, 18, 0.88) 45%, rgba(4, 6, 12, 0.92) 100%);
    border: 1px solid rgba(255, 255, 255, 0.06);
    backdrop-filter: blur(18px);
    transition: transform 0.45s cubic-bezier(0.4, 0, 0.2, 1), box-shadow 0.45s ease, border-color 0.45s ease;
    filter: none;
    position: relative;
    z-index: 1;
    box-shadow:
      0 18px 45px rgba(2, 6, 18, 0.35),
      inset 0 1px 0 rgba(255, 255, 255, 0.08);
  }

  .service-card:hover {
    transform: translateY(-6px);
    border-color: rgba(27, 240, 195, 0.22);
    box-shadow:
      0 24px 60px rgba(6, 18, 40, 0.55),
      0 0 32px rgba(27, 240, 195, 0.18),
      inset 0 1px 0 rgba(255, 255, 255, 0.12);
  }

  .service-card__aura {
    content: '';
    position: absolute;
    inset: -30% -20% 45% -20%;
    background: radial-gradient(120% 100% at 50% 0%, rgba(25, 248, 196, 0.24) 0%, rgba(25, 248, 196, 0.06) 42%, rgba(0, 0, 0, 0) 70%);
    opacity: 0.65;
    mix-blend-mode: screen;
    transition: opacity 0.45s ease, filter 0.45s ease;
    pointer-events: none;
    z-index: 0;
  }

  .service-card:hover .service-card__aura {
    opacity: 0.85;
    filter: blur(2px);
  }

  .service-icon {
    font-size: 1.75rem;
    font-weight: 700;
    color: rgba(9, 19, 28, 0.9);
    width: 3.5rem;
    height: 3.5rem;
    margin: 0 auto 1.5rem;
    border-radius: 999px;
    display: grid;
    place-items: center;
    background:
      radial-gradient(120% 120% at 50% 20%, rgba(24, 255, 203, 0.92) 0%, rgba(24, 255, 203, 0.62) 38%, rgba(24, 255, 203, 0.35) 62%, rgba(24, 255, 203, 0.1) 82%, rgba(24, 255, 203, 0) 100%),
      radial-gradient(180% 140% at 50% 120%, rgba(8, 36, 54, 0.6) 0%, rgba(8, 36, 54, 0) 70%);
    box-shadow: 0 14px 34px rgba(18, 255, 205, 0.25), inset 0 1px 0 rgba(255, 255, 255, 0.36);
    position: relative;
    z-index: 1;
    transition: transform 0.4s ease, box-shadow 0.4s ease;
  }

  .service-card:hover .service-icon {
    transform: translateY(-4px) scale(1.03);
    box-shadow: 0 18px 48px rgba(24, 255, 203, 0.35), inset 0 1px 0 rgba(255, 255, 255, 0.5);
  }
  
  
  /* Content Animations */
  .service-title {
    color: #53f5d8;
    letter-spacing: 0.04em;
    transform: translateY(0);
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .service-card:hover .service-title {
    color: #dffef6;
  }

  .service-description {
    transform: translateY(0);
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    color: rgba(211, 222, 236, 0.75);
  }
  
  .service-button {
    transform: translateY(0);
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .service-cta {
    background: linear-gradient(150deg, rgba(8, 40, 46, 0.82) 0%, rgba(8, 24, 34, 0.92) 100%);
    border-radius: 999px;
    border: 1px solid rgba(24, 255, 203, 0.45);
    color: rgba(218, 248, 241, 0.92);
    box-shadow: 0 10px 28px rgba(18, 255, 205, 0.22), inset 0 1px 0 rgba(255, 255, 255, 0.18);
  }

  .service-cta:hover {
    color: #0f1920;
    border-color: rgba(24, 255, 203, 0.75);
    background: linear-gradient(150deg, rgba(24, 255, 203, 0.94) 0%, rgba(12, 188, 201, 0.9) 100%);
    box-shadow: 0 18px 42px rgba(24, 255, 203, 0.32), inset 0 1px 0 rgba(255, 255, 255, 0.4);
    transform: translateY(-2px);
  }
  
  /* Staggered Animation on Load */
  .service-card:nth-child(1) { animation-delay: 0.1s; }
  .service-card:nth-child(2) { animation-delay: 0.2s; }
  .service-card:nth-child(3) { animation-delay: 0.3s; }
  .service-card:nth-child(4) { animation-delay: 0.4s; }
  
  .service-card {
    animation: slideInUp 0.6s ease-out forwards;
    opacity: 0;
    transform: translateY(30px);
  }
  
  @keyframes slideInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
</style>
