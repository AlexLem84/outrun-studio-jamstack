<style>
  /* Bento Grid Gallery */
  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(3, 140px);
    gap: 1rem;
  }

  .gallery-item-large {
    grid-column: 1 / 2;
    grid-row: 1 / 3;
  }

  .gallery-item {
    position: relative;
    background: rgba(10, 10, 15, 0.95);
    border-radius: 16px;
    overflow: visible;
    transform: translate3d(0, 0, 0);
    transition: transform 0s, box-shadow 0s;
  }

  .gallery-item:hover {
    transform: translate3d(0, -4px, 0);
    box-shadow: 
      0 15px 30px rgba(0, 0, 0, 0.6),
      0 0 40px rgba(178, 75, 243, 0.4);
  }

  .gradient-line-top {
    height: 3px;
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
  }

  .gradient-purple {
    background: linear-gradient(90deg, #b24bf3 0%, #8b5cf6 100%);
  }

  .gradient-cyan {
    background: linear-gradient(90deg, #06b6d4 0%, #00d9ff 100%);
  }

  .gallery-content {
    padding: 1.5rem;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .gallery-icon {
    font-size: 2.5rem;
    margin-bottom: 0.75rem;
  }

  .service-list-item {
    padding: 1rem;
    border-radius: 12px;
    background: rgba(10, 10, 15, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.05);
    transition: all 0.2s ease;
  }

  .service-list-item:hover {
    background: rgba(10, 10, 15, 0.8);
    border-color: rgba(0, 217, 255, 0.3);
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .gallery-grid {
      grid-template-rows: repeat(3, 120px);
      gap: 0.75rem;
    }

    .gallery-content {
      padding: 1rem;
    }

    .gallery-icon {
      font-size: 2rem;
      margin-bottom: 0.5rem;
    }
  }
</style>
