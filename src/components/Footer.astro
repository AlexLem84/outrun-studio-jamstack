---
// Footer component for Outrun Studio - Dark Theme
import { getMediaByType, urlFor } from '../lib/sanity';

// Fetch logo from Sanity Media Library
const logo = await getMediaByType('logo');
---

<footer class="bg-outrun-darker border-t border-outrun-neon">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="col-span-1 md:col-span-2">
        <div class="flex items-center mb-4">
          {logo && logo.image ? (
            <img 
              src={urlFor(logo.image).width(200).height(60).fit('max').url()} 
              alt={logo.image.alt || logo.title || 'Outrun Studio Logo'}
              class="h-12 w-auto"
            />
          ) : (
            <div class="text-2xl font-orbitron font-bold">
              <span class="text-outrun-neon text-neon-glow">OUTRUN</span>
              <span class="text-outrun-light ml-2">Studio</span>
            </div>
          )}
        </div>
        <p class="text-outrun-light mb-6 max-w-md font-inter">
          Idaho Falls' premier digital marketing agency specializing in web design, 
          graphic design, SEO, and PPC advertising that drives real results.
        </p>
        <div class="flex space-x-4">
          <a href="#" class="text-outrun-light hover:text-outrun-neon transition-colors">
            <span class="sr-only">Facebook</span>
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a href="#" class="text-outrun-light hover:text-outrun-neon transition-colors">
            <span class="sr-only">Instagram</span>
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987 6.62 0 11.987-5.367 11.987-11.987C24.014 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.49-3.323-1.297C4.198 14.895 3.708 13.744 3.708 12.447s.49-2.448 1.297-3.323c.875-.807 2.026-1.297 3.323-1.297s2.448.49 3.323 1.297c.807.875 1.297 2.026 1.297 3.323s-.49 2.448-1.297 3.323c-.875.807-2.026 1.297-3.323 1.297zm7.83-9.281H7.83c-.49 0-.875.385-.875.875v7.83c0 .49.385.875.875.875h8.449c.49 0 .875-.385.875-.875v-7.83c0-.49-.385-.875-.875-.875z"/>
            </svg>
          </a>
          <a href="#" class="text-outrun-light hover:text-outrun-neon transition-colors">
            <span class="sr-only">LinkedIn</span>
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-lg font-semibold mb-4 text-outrun-neon font-orbitron">Services</h3>
        <ul class="space-y-2">
          <li><a href="/services#web-design" class="text-outrun-light hover:text-outrun-neon transition-colors font-inter">Web Design</a></li>
          <li><a href="/services#graphic-design" class="text-outrun-light hover:text-outrun-neon transition-colors font-inter">Graphic Design</a></li>
          <li><a href="/services#seo" class="text-outrun-light hover:text-outrun-neon transition-colors font-inter">SEO</a></li>
          <li><a href="/services#ppc" class="text-outrun-light hover:text-outrun-neon transition-colors font-inter">PPC Advertising</a></li>
          <li><a href="/services#branding" class="text-outrun-light hover:text-outrun-neon transition-colors font-inter">Branding</a></li>
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h3 class="text-lg font-semibold mb-4 text-outrun-neon font-orbitron">Company</h3>
        <ul class="space-y-2">
          <li><a href="/about" class="text-outrun-light hover:text-outrun-neon transition-colors font-inter">About Us</a></li>
          <li><a href="/portfolio" class="text-outrun-light hover:text-outrun-neon transition-colors font-inter">Portfolio</a></li>
          <li><a href="/blog" class="text-outrun-light hover:text-outrun-neon transition-colors font-inter">Blog</a></li>
          <li><a href="/contact" class="text-outrun-light hover:text-outrun-neon transition-colors font-inter">Contact</a></li>
          <li><a href="/privacy" class="text-outrun-light hover:text-outrun-neon transition-colors font-inter">Privacy Policy</a></li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-outrun-neon mt-8 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-outrun-light text-sm font-inter">
          Â© 2024 Outrun Studio. All rights reserved.
        </p>
        <p class="text-outrun-light text-sm mt-2 md:mt-0 font-inter">
          Proudly serving Idaho Falls and surrounding areas.
        </p>
      </div>
    </div>
  </div>
</footer>
