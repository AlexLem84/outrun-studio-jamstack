---
// 3D Interactive Portfolio Section with Computer Screen
import { getFeaturedPortfolioProjects } from '../lib/sanity';

const projects = await getFeaturedPortfolioProjects();
---

<section class="portfolio-3d-section relative min-h-screen bg-gradient-to-br from-gray-900 via-black to-gray-800 overflow-hidden">
  <!-- Background Elements -->
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-cyan-500/10 via-transparent to-transparent"></div>
  
  <!-- 3D Computer Screen Container -->
  <div class="relative z-10 flex items-center justify-center min-h-screen py-20">
    <div class="portfolio-3d-container w-full max-w-6xl mx-auto px-6">
      
      <!-- Section Header -->
      <div class="text-center mb-16">
        <h2 class="text-5xl md:text-7xl font-bold text-white mb-6 tracking-tight">
          <span class="bg-gradient-to-r from-cyan-400 via-blue-500 to-purple-600 bg-clip-text text-transparent">
            PORTFOLIO
          </span>
        </h2>
        <p class="text-xl text-gray-300 max-w-2xl mx-auto">
          Interactive 3D showcase of our latest creative projects
        </p>
      </div>

      <!-- 3D Computer Screen -->
      <div class="computer-screen-3d relative mx-auto" style="perspective: 1000px;">
        <!-- Computer Base -->
        <div class="computer-base absolute bottom-0 left-1/2 transform -translate-x-1/2 w-96 h-8 bg-gradient-to-t from-gray-800 to-gray-600 rounded-lg shadow-2xl"></div>
        
        <!-- Screen Stand -->
        <div class="screen-stand absolute bottom-8 left-1/2 transform -translate-x-1/2 w-4 h-32 bg-gradient-to-t from-gray-700 to-gray-500 rounded-full"></div>
        
        <!-- Screen Frame -->
        <div class="screen-frame relative w-full max-w-4xl mx-auto">
          <!-- Screen Bezel -->
          <div class="screen-bezel bg-gradient-to-br from-gray-800 to-gray-900 rounded-2xl p-4 shadow-2xl">
            <!-- Screen Content -->
            <div class="screen-content bg-black rounded-xl overflow-hidden relative" style="aspect-ratio: 16/10;">
              
              <!-- Screen Glow Effect -->
              <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/20 via-transparent to-purple-500/20 pointer-events-none"></div>
              
              <!-- Portfolio Grid -->
              <div class="portfolio-grid h-full p-8 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 overflow-y-auto">
                {projects && projects.length > 0 ? projects.map((project: any, index: number) => (
                  <div 
                    class="portfolio-card group relative bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-sm rounded-xl p-6 border border-gray-700/50 hover:border-cyan-400/50 transition-all duration-500 hover:scale-105 hover:shadow-2xl hover:shadow-cyan-500/20"
                    style={`animation-delay: ${index * 0.1}s`}
                  >
                    <!-- Project Image -->
                    {project.image && (
                      <div class="relative mb-4 rounded-lg overflow-hidden">
                        <img 
                          src={project.image.url} 
                          alt={project.title}
                          class="w-full h-32 object-cover transition-transform duration-500 group-hover:scale-110"
                          loading="lazy"
                        />
                        <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                      </div>
                    )}
                    
                    <!-- Project Info -->
                    <div class="space-y-2">
                      <h3 class="text-lg font-semibold text-white group-hover:text-cyan-400 transition-colors duration-300">
                        {project.title}
                      </h3>
                      {project.description && (
                        <p class="text-sm text-gray-300 line-clamp-2">
                          {project.description}
                        </p>
                      )}
                      {project.projectType && (
                        <span class="inline-block px-3 py-1 bg-cyan-500/20 text-cyan-400 text-xs rounded-full border border-cyan-500/30">
                          {project.projectType}
                        </span>
                      )}
                    </div>
                    
                    <!-- Hover Overlay -->
                    <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/10 to-purple-500/10 rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none"></div>
                  </div>
                )) : (
                  <div class="col-span-full text-center py-20">
                    <div class="text-gray-400 text-lg">No projects available</div>
                  </div>
                )}
              </div>
              
              <!-- Screen Scanlines -->
              <div class="screen-scanlines absolute inset-0 pointer-events-none opacity-30">
                <div class="h-full bg-gradient-to-b from-transparent via-cyan-500/10 to-transparent animate-pulse"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Floating Elements -->
      <div class="floating-elements absolute inset-0 pointer-events-none">
        <div class="floating-orb orb-1 absolute top-20 left-10 w-4 h-4 bg-cyan-400 rounded-full animate-pulse"></div>
        <div class="floating-orb orb-2 absolute top-40 right-20 w-6 h-6 bg-purple-400 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
        <div class="floating-orb orb-3 absolute bottom-40 left-20 w-3 h-3 bg-blue-400 rounded-full animate-pulse" style="animation-delay: 2s;"></div>
        <div class="floating-orb orb-4 absolute bottom-20 right-10 w-5 h-5 bg-pink-400 rounded-full animate-pulse" style="animation-delay: 0.5s;"></div>
      </div>
    </div>
  </div>
</section>

<style>
  .portfolio-3d-section {
    background: linear-gradient(135deg, #0f0f23 0%, #1a1a2e 50%, #16213e 100%);
  }
  
  .computer-screen-3d {
    transform-style: preserve-3d;
    animation: float 6s ease-in-out infinite;
  }
  
  .screen-frame {
    transform: rotateX(5deg) rotateY(-2deg);
    transition: transform 0.5s ease;
  }
  
  .screen-frame:hover {
    transform: rotateX(2deg) rotateY(0deg);
  }
  
  .portfolio-card {
    animation: slideInUp 0.6s ease-out forwards;
    opacity: 0;
    transform: translateY(30px);
  }
  
  .portfolio-grid {
    scrollbar-width: thin;
    scrollbar-color: rgba(6, 182, 212, 0.3) transparent;
  }
  
  .portfolio-grid::-webkit-scrollbar {
    width: 6px;
  }
  
  .portfolio-grid::-webkit-scrollbar-track {
    background: transparent;
  }
  
  .portfolio-grid::-webkit-scrollbar-thumb {
    background: rgba(6, 182, 212, 0.3);
    border-radius: 3px;
  }
  
  .floating-orb {
    filter: blur(1px);
    box-shadow: 0 0 20px currentColor;
  }
  
  @keyframes float {
    0%, 100% { transform: translateY(0px) rotateX(5deg) rotateY(-2deg); }
    50% { transform: translateY(-10px) rotateX(5deg) rotateY(-2deg); }
  }
  
  @keyframes slideInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .computer-screen-3d {
      transform: scale(0.8);
    }
    
    .screen-frame {
      transform: rotateX(0deg) rotateY(0deg);
    }
  }
</style>
