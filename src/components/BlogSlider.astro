---
// Fetch latest blog posts (you can adjust the limit as needed)
const posts = [
  {
    title: "Modern Web Design Trends for 2025",
    excerpt: "Discover the latest web design trends shaping the digital landscape this year, from AI integration to immersive experiences.",
    date: "January 15, 2025",
    image: "/images/Web-design-Idaho-Falls.png",
    slug: "#"
  },
  {
    title: "Local SEO Strategies That Work",
    excerpt: "Learn how Idaho Falls businesses can dominate local search results with proven SEO tactics and Google Business optimization.",
    date: "December 28, 2024",
    image: "/images/SEO-Idaho-Falls.png",
    slug: "#"
  },
  {
    title: "The Power of Brand Identity",
    excerpt: "Why consistent branding across print and digital channels is crucial for business growth and customer recognition.",
    date: "December 10, 2024",
    image: "/images/Graphic-Design.jpg",
    slug: "#"
  }
];
---

<section class="blog-slider-section">
  <div class="max-w-6xl mx-auto px-6 sm:px-8 lg:px-10">
    <header class="text-center mb-12">
      <span class="text-sm uppercase tracking-[0.45em] text-outrun-neon/70">Latest insights</span>
      <h2 class="text-4xl font-biennale text-white mt-4">From the blog</h2>
      <p class="text-lg text-outrun-light-gray mt-4">Tips, strategies, and insights from our team</p>
    </header>

    <div class="blog-slider">
      <div class="blog-slider__wrp swiper-wrapper">
        {posts.map((post) => (
          <div class="blog-slider__item swiper-slide">
            <div class="blog-slider__img">
              <img src={post.image} alt={post.title} />
            </div>
            <div class="blog-slider__content">
              <span class="blog-slider__code">{post.date}</span>
              <div class="blog-slider__title">{post.title}</div>
              <div class="blog-slider__text">{post.excerpt}</div>
              <a href={post.slug} class="blog-slider__button">READ MORE</a>
            </div>
          </div>
        ))}
      </div>
      <div class="blog-slider__pagination"></div>
    </div>
  </div>
</section>

<style>
.blog-slider-section {
  padding: clamp(4rem, 8vw, 6rem) 0;
  position: relative;
}

.blog-slider {
  width: 100%;
  position: relative;
  max-width: 900px;
  margin: auto;
  background: rgba(17, 19, 23, 0.85);
  box-shadow: 0px 14px 80px rgba(0, 0, 0, 0.4);
  padding: 25px;
  padding-right: 60px;
  border-radius: 25px;
  height: 400px;
  transition: all 0.3s;
  backdrop-filter: blur(12px);
  border: 1px solid rgba(0, 255, 136, 0.1);
}

@media screen and (max-width: 992px) {
  .blog-slider {
    max-width: 680px;
    height: 400px;
  }
}

@media screen and (max-width: 768px) {
  .blog-slider {
    min-height: 500px;
    height: auto;
    margin: 180px auto;
  }
}

@media screen and (max-height: 500px) and (min-width: 992px) {
  .blog-slider {
    height: 350px;
  }
}

.blog-slider__item {
  display: flex;
  align-items: center;
}

@media screen and (max-width: 768px) {
  .blog-slider__item {
    flex-direction: column;
  }
}

.blog-slider__item.swiper-slide-active .blog-slider__img img {
  opacity: 1;
  transition-delay: 0.3s;
}

.blog-slider__item.swiper-slide-active .blog-slider__content > * {
  opacity: 1;
  transform: none;
}

.blog-slider__item.swiper-slide-active .blog-slider__content > *:nth-child(1) {
  transition-delay: 0.3s;
}

.blog-slider__item.swiper-slide-active .blog-slider__content > *:nth-child(2) {
  transition-delay: 0.4s;
}

.blog-slider__item.swiper-slide-active .blog-slider__content > *:nth-child(3) {
  transition-delay: 0.5s;
}

.blog-slider__item.swiper-slide-active .blog-slider__content > *:nth-child(4) {
  transition-delay: 0.6s;
}

.blog-slider__img {
  width: 300px;
  flex-shrink: 0;
  height: 300px;
  background: linear-gradient(135deg, #00ff88, #7aa8ff);
  box-shadow: 4px 13px 30px 1px rgba(0, 255, 136, 0.3);
  border-radius: 20px;
  transform: translateX(-80px);
  overflow: hidden;
  position: relative;
}

.blog-slider__img::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(0, 255, 136, 0.2), rgba(122, 168, 255, 0.2));
  border-radius: 20px;
  opacity: 0.8;
}

.blog-slider__img img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
  opacity: 0;
  border-radius: 20px;
  transition: all 0.3s;
}

@media screen and (max-width: 768px) {
  .blog-slider__img {
    transform: translateY(-50%);
    width: 90%;
  }
}

@media screen and (max-width: 576px) {
  .blog-slider__img {
    width: 95%;
  }
}

@media screen and (max-height: 500px) and (min-width: 992px) {
  .blog-slider__img {
    height: 270px;
  }
}

.blog-slider__content {
  padding-right: 25px;
}

@media screen and (max-width: 768px) {
  .blog-slider__content {
    margin-top: -80px;
    text-align: center;
    padding: 0 30px;
  }
}

@media screen and (max-width: 576px) {
  .blog-slider__content {
    padding: 0;
  }
}

.blog-slider__content > * {
  opacity: 0;
  transform: translateY(25px);
  transition: all 0.4s;
}

.blog-slider__code {
  color: #00ff88;
  margin-bottom: 15px;
  display: block;
  font-weight: 500;
  font-size: 0.85rem;
  text-transform: uppercase;
  letter-spacing: 0.1em;
}

.blog-slider__title {
  font-size: 24px;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 20px;
  font-family: 'Biennale', sans-serif;
}

.blog-slider__text {
  color: #a7b0be;
  margin-bottom: 30px;
  line-height: 1.5em;
}

.blog-slider__button {
  display: inline-flex;
  background: linear-gradient(135deg, #00ff88, #7aa8ff);
  padding: 15px 35px;
  border-radius: 50px;
  color: #05060a;
  box-shadow: 0px 14px 30px rgba(0, 255, 136, 0.4);
  text-decoration: none;
  font-weight: 600;
  justify-content: center;
  text-align: center;
  letter-spacing: 1px;
  transition: transform 0.2s ease;
}

.blog-slider__button:hover {
  transform: translateY(-2px);
  box-shadow: 0px 18px 40px rgba(0, 255, 136, 0.5);
}

@media screen and (max-width: 576px) {
  .blog-slider__button {
    width: 100%;
  }
}

.swiper-container-horizontal > .swiper-pagination-bullets,
.swiper-pagination-custom,
.swiper-pagination-fraction {
  bottom: 10px;
  left: 0;
  width: 100%;
}

.blog-slider__pagination {
  position: absolute;
  z-index: 21;
  right: 20px;
  width: auto !important;
  text-align: center;
  left: auto !important;
  top: 50%;
  bottom: auto !important;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  gap: 8px;
}

@media screen and (max-width: 768px) {
  .blog-slider__pagination {
    transform: translateX(-50%);
    left: 50% !important;
    top: 205px;
    right: auto;
    width: 100% !important;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: 5px;
  }
}

:global(.blog-slider__pagination .swiper-pagination-bullet) {
  width: 11px;
  height: 11px;
  display: block;
  border-radius: 10px;
  background: #ffffff;
  opacity: 0.3;
  transition: all 0.3s;
  border: 1px solid rgba(0, 255, 136, 0.2);
  margin: 0 !important;
}

:global(.blog-slider__pagination .swiper-pagination-bullet-active) {
  opacity: 1;
  background: #00ff88;
  height: 30px;
  box-shadow: 0px 0px 20px rgba(0, 255, 136, 0.5);
  border-color: #00ff88;
}

@media screen and (max-width: 768px) {
  :global(.blog-slider__pagination .swiper-pagination-bullet-active) {
    height: 11px;
    width: 30px;
  }
}
</style>

<!-- Swiper CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

<script is:inline src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    const swiper = new Swiper('.blog-slider', {
      spaceBetween: 30,
      effect: 'fade',
      loop: true,
      mousewheel: {
        invert: false,
      },
      pagination: {
        el: '.blog-slider__pagination',
        clickable: true,
      },
      autoplay: {
        delay: 5000,
        disableOnInteraction: false,
      },
    });
  });
</script>

